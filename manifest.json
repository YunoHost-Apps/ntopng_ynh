{
    "name": "ntopng",
    "id": "ntopng",
    "packaging_format": 1,
    "description": {
        "en": "ntopng package for YunoHost.",
        "fr": "ntopng pour YunoHost."
    },
    "version": "3.8",
    "url": "https://www.ntop.org/",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ntopng",
                    "fr": "Choisissez un nom de domaine pour ntopng"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ntopng /ntop is accepted",
                    "fr": "Choisissez un chemin pour ntopng /ntop est accept√©"
                },
                "example": "/ntop",
                "default": "/ntop"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
